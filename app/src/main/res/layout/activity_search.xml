<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".search">

    <ImageView
        android:id="@+id/group_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/status_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/grey"
        android:hint="ðŸ”ï¸Ž Search for users..."
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColorHint="@color/brown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group_1" />

    <!-- Filters and Sorting -->
    <HorizontalScrollView
        android:id="@+id/filters_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/searchEditText"
        app:layout_constraintStart_toStartOf="@id/searchEditText"
        app:layout_constraintEnd_toEndOf="@id/searchEditText">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/filterChipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAll"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFollowing"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Following" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFollowers"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Followers" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMutual"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mutual" />

            </com.google.android.material.chip.ChipGroup>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Sort by:"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/sortChipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipUsername"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFollowerCount"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Most Followers" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipLeastFollowers"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Least Followers" />
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Explore Feed and Search Results Views -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/filters_container"
        app:layout_constraintBottom_toTopOf="@id/navigation_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Explore Feed -->
        <ScrollView
            android:id="@+id/exploreFeedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp">

                <!-- Row 1 -->
                <ImageView
                    android:id="@+id/image_1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:layout_margin="2dp"
                    android:background="@drawable/image_1"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/image_2"/>

                <ImageView
                    android:id="@+id/image_2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:layout_margin="2dp"
                    android:background="@drawable/image_2"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/image_1"
                    app:layout_constraintEnd_toStartOf="@+id/image_3"/>

                <ImageView
                    android:id="@+id/image_3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:layout_margin="2dp"
                    android:background="@drawable/image_3"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/image_2"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Row 2 -->
                <ImageView
                    android:id="@+id/image_4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:layout_margin="2dp"
                    android:background="@drawable/image_4"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toBottomOf="@id/image_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/image_5"/>

                <ImageView
                    android:id="@+id/image_5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:layout_margin="2dp"
                    android:background="@drawable/image_5"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toBottomOf="@id/image_2"
                    app:layout_constraintStart_toEndOf="@id/image_4"
                    app:layout_constraintEnd_toStartOf="@+id/image_6"/>

                <ImageView
                    android:id="@+id/image_6"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:layout_margin="2dp"
                    android:background="@drawable/image_6"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toBottomOf="@id/image_3"
                    app:layout_constraintStart_toEndOf="@id/image_5"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Row 3 -->
                <ImageView
                    android:id="@+id/image_7"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:layout_margin="2dp"
                    android:background="@drawable/image_7"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toBottomOf="@id/image_4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/image_8"/>

                <ImageView
                    android:id="@+id/image_8"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:layout_margin="2dp"
                    android:background="@drawable/image_8"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toBottomOf="@id/image_5"
                    app:layout_constraintStart_toEndOf="@id/image_7"
                    app:layout_constraintEnd_toStartOf="@+id/image_9"/>

                <ImageView
                    android:id="@+id/image_9"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:layout_margin="2dp"
                    android:background="@drawable/image_9"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toBottomOf="@id/image_6"
                    app:layout_constraintStart_toEndOf="@id/image_8"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Row 4 -->
                <ImageView
                    android:id="@+id/image_10"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:layout_margin="2dp"
                    android:background="@drawable/image_10"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toBottomOf="@id/image_7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/image_11"/>

                <ImageView
                    android:id="@+id/image_11"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:layout_margin="2dp"
                    android:background="@drawable/image_11"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toBottomOf="@id/image_8"
                    app:layout_constraintStart_toEndOf="@id/image_10"
                    app:layout_constraintEnd_toStartOf="@+id/image_12"/>

                <ImageView
                    android:id="@+id/image_12"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:layout_margin="2dp"
                    android:background="@drawable/image_12"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toBottomOf="@id/image_9"
                    app:layout_constraintStart_toEndOf="@id/image_11"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <!-- Search Results -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchResultsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:listitem="@layout/user_list_item" />

    </FrameLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:scaleType="centerCrop"
        android:weightSum="50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

            <!-- Navigation buttons -->
            <ImageButton
                android:id="@+id/tab_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@color/white"
                android:src="@drawable/tab_1" />
            <ImageButton
                android:id="@+id/tab_2_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@color/white"
                android:src="@drawable/tab_2_search_filled" />
            <ImageButton
                android:id="@+id/tab_3_plus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@color/white"
                android:src="@drawable/tab_3_plus" />
            <ImageButton
                android:id="@+id/tab_4_notification"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@color/white"
                android:src="@drawable/tab_4_notification" />
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/tab_5"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_profile_right_bottom"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop" />
            </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>